generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id           String   @id @default(uuid())
  min_capacity Int
  max_capacity Int
  image_uri    String?
  description  String?
  no_table     String   @unique
  is_outdoor   Boolean
  is_active    Boolean
  barcode      String?

  @@map("table")
}
